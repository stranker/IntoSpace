var cameraSpeed = 500
var direction = Vector2(0,-1)
var shaking = false
var shakeAmount = 0

func _ready():
	Global.camera = self
	pass

func _process(delta):
	translate(direction * cameraSpeed * delta)
	if shaking:
		offset.x = rand_range(-shakeAmount,shakeAmount)
		offset.y = rand_range(-shakeAmount,shakeAmount)
	pass

func shake(amount, time):
	shaking = true
	$ShakeTime.wait_time = time
	shakeAmount = amount
	$ShakeTime.start()
	pass

func minimal_shake():
	shake(2,0.5)
	pass

func set_active_spawns(val):
	for i in $Spawns.get_children():
		i.set_active(val)
	pass

