resource_name = "Spaceship.gd"
script/source = "extends Area2D

export (int) var life
var direction = Vector2(0,-1)
var offsetPos = Vector2()
export (PackedScene) var bullet
var moving = false
var sizeSprite
var dragging = false
var alive

func _ready():
	initialize()
	pass

func initialize():
	Global.player = self
	sizeSprite = $Sprite.texture.get_size() * $Sprite.scale
	add_to_group(\"Player\")
	alive = true
	pass

func _process(delta):
	movement(delta)
	clamp_position()
	if !dragging:
		offsetPos = Vector2()
	pass

func _input(event):
	if event is InputEventScreenTouch:
		if event.is_pressed() and !dragging:
			dragging = true
	if event is InputEventScreenDrag:
		offsetPos = event.relative
		if !event.is_pressed():
			dragging = false
	pass

func movement(delta):
	translate(Global.camera.cameraSpeed * delta * direction)
	position += offsetPos
	pass


func clamp_position():
	if position.x < sizeSprite.x/2:
		position.x = sizeSprite.x/2
	elif position.x > get_viewport_rect().size.x - sizeSprite.x/2:
		position.x = get_viewport_rect().size.x- sizeSprite.x/2
	if position.y < Global.camera.position.y - get_viewport_rect().size.y/2 + 250:
		position.y = Global.camera.position.y - get_viewport_rect().size.y/2 + 250
	elif position.y > Global.camera.position.y + get_viewport_rect().size.y/2 - sizeSprite.y/2:
		position.y = Global.camera.position.y + get_viewport_rect().size.y/2 - sizeSprite.y/2

func add_shield():
	$Shield.visible
	$Shield.create_shield()
	pass

func homing_missile():
	if !$HomingShooter.enabled:
		$HomingShooter.enabled = true
	else:
		$HomingShooter.enabled = false
	pass

func add_turrets():
	set_shoot_controller()
	$ShootController.upgrade()
	pass

func add_laser():
	$Laser.set_active(true)
	pass

func set_shoot_controller():
	if !$ShootController.enabled:
		$ShootController.set_active(true)
	else:
		$ShootController.set_active(false)

func increment_magnet():
	$MagnetArea.increment_magnet()

func take_damage(val):
	life -= val
	if life <= 0:
		$Anim.play(\"Dead\")
		get_tree().change_scene(\"res://Scenes/DeadScene.tscn\")

func _on_SpaceShip_area_entered(area):
	if area.is_in_group(\"Enemy\"):
		take_damage(area.damage)
		area.take_damage(9999)
	pass # replace with function body
