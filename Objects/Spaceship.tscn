script/source = "extends Area2D

var direction = Vector2(0,-1)
export (int) var speed = 500
export (PackedScene) var bullet
var canShoot = true
var moving = false
var sizeSprite

var dragging = false

func _ready():
	sizeSprite = $Sprite.texture.get_size()
	add_to_group(\"Player\")
	pass

func _process(delta):
	movement(delta)
	shoot()
	if !moving:
		direction.x = 0
	pass

func _input(event):
	if event is InputEventScreenTouch:
		if !event.is_pressed() and dragging:
			dragging = false
	if event is InputEventScreenDrag:
		dragging = true
		direction.x = event.relative.normalized().x
		moving = true
		if !event.is_pressed():
			moving = false
	pass

func movement(delta):
	position += direction * delta * speed
	pass

func _on_ShootTimer_timeout():
	canShoot = true
	pass # replace with function body

func shoot():
	if canShoot:
		var b = bullet.instance()
		get_tree().root.add_child(b)
		b.global_position = $ShootPos.global_position
		canShoot = false
		$ShootTimer.start()"
