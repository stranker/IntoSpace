var direction = Vector2()
export (int) var speed = 300
export (PackedScene) var bullet
var canShoot = true

func _ready():
	pass

func _process(delta):
	movement(delta)
	clamp_position()
	pass

func _input(event):
	if event is InputEventScreenDrag:
		direction = event.relative.normalized()
	elif event is InputEventScreenTouch and canShoot:
		if event.is_pressed():
			shoot()
	pass

func movement(delta):
	position += direction * delta * speed
	pass

func clamp_position():
	if position.x < $Sprite.texture.get_size().x/2:
		position.x = $Sprite.texture.get_size().x/2
	elif position.x > get_viewport_rect().size.x - $Sprite.texture.get_size().x/2:
		position.x = get_viewport_rect().size.x - $Sprite.texture.get_size().x/2
	pass

func _on_ShootTimer_timeout():
	canShoot = true
	pass # replace with function body

func shoot():
	var b = bullet.instance()
	get_tree().root.add_child(b)
	b.global_position = $ShootPos.global_position
	canShoot = false
	$ShootTimer.start()"

