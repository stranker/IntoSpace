resource_name = "Spaceship.gd"
script/source = "extends Area2D

var direction = Vector2()
export (int) var speed = 80
export (PackedScene) var bullet
var canShoot = true
var moving = false
var sizeSprite

func _ready():
	sizeSprite = $Sprite.texture.get_size()
	add_to_group(\"Player\")
	pass

func _process(delta):
	movement(delta)
	clamp_position()
	if !moving:
		direction = Vector2(0,0)
	pass

func _input(event):
	if event is InputEventScreenDrag:
		direction = event.relative
		moving = true
		if !event.is_pressed():
			moving = false
	if event is InputEventScreenTouch and canShoot:
		if event.is_pressed():
			shoot()
	pass

func movement(delta):
	position += direction * delta * speed
	pass

func clamp_position():
	if position.x < sizeSprite.x/2 * $Sprite.scale.x:
		position.x = sizeSprite.x/2 * $Sprite.scale.x
	elif position.x > get_viewport_rect().size.x - sizeSprite.x/2 * $Sprite.scale.x:
		position.x = get_viewport_rect().size.x - sizeSprite.x/2 * $Sprite.scale.x
	pass

func _on_ShootTimer_timeout():
	canShoot = true
	pass # replace with function body

func shoot():
	var b = bullet.instance()
	get_tree().root.add_child(b)
	b.global_position = $ShootPos.global_position
	canShoot = false
	$ShootTimer.start()"
