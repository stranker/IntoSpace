script/source = "extends Node2D

var damage = 10
var enemy = null
var enabled = true

func _ready():
	$RayCast2D.add_exception(get_parent())
	pass

func _process(delta):
	visible = enabled
	if enabled:
		if $RayCast2D.is_colliding():
			var target = $RayCast2D.get_collider()
			if target.is_in_group(\"Enemy\"):
				enemy = target
				enemy.take_damage(damage*delta)
		else:
			enemy = null
		calculate_fill(delta)
		$Particulas.emitting = $Particulas.visible
	pass

func calculate_fill(delta):
	if enemy and enemy.alive:
		var enemyPos = enemy.position
		$Particulas.visible = true
		$Particulas.global_position = enemyPos
		$Sprite.value = (($Sprite.rect_global_position.y +$Sprite.rect_size.y - enemyPos.y) * $Sprite.max_value) / $Sprite.rect_size.y
	else:
		$Sprite.value += 200 * delta
		$Particulas.visible = false
	pass

func _on_Timer_timeout():
	enabled = false
	pass # replace with function body
