script/source = "extends Area2D

var damage = 1
export (int) var speed = 800
export (float) var steerForce = 0
var enemyTarget = null
var fromEnemy
var velocity = Vector2()
var acceleration = Vector2()
var direction = Vector2()
var steer

func _ready():
	pass

func shoot(_damage,fEnemy):
	damage = _damage
	fromEnemy = fEnemy
	direction.x = rand_range(-0.2,0.2)
	if !fromEnemy:
		direction.y = -1
	else:
		direction.y = 1
		speed = speed / 1.5
	direction = direction.normalized()
	velocity = direction * speed
	rotation = velocity.angle()
	pass


func _process(delta):
	if enemyTarget and enemyTarget.alive:
		acceleration += seek_enemy()
		velocity += acceleration * delta
		velocity = velocity.clamped(speed)
		rotation = velocity.angle()
	translate(velocity * delta)
	pass

func _on_DetectionArea_area_entered(area):
	if !enemyTarget:
		if !fromEnemy:
			if area.is_in_group(\"Enemy\"):
				enemyTarget = area
		else:
			if area.is_in_group(\"Player\"):
				enemyTarget = area
	pass # replace with function body


func seek_enemy():
	var desired = (enemyTarget.global_position - global_position).normalized() * speed
	var steer = (desired - velocity).normalized() * steerForce
	return steer

func _on_HoverMissile_area_entered(area):
	if !fromEnemy:
		if area.is_in_group(\"Enemy\") and area.alive:
			area.take_damage(damage)
			queue_free()
	else:
		if area.is_in_group(\"Player\") and area.alive:
			area.take_damage(damage)
			queue_free()
	pass # replace with function body


func _on_DetectionArea_area_exited(area):
	if area.is_in_group(\"Enemy\") and enemyTarget == area:
		enemyTarget = null
	pass # replace with function body


func _on_VisibilityNotifier2D_screen_exited():
	queue_free()
	pass # replace with function body
