script/source = "extends Area2D

export (int) var damage = 10
export (int) var speed = 500
var enemyList = []
var direction = Vector2()

func _ready():
	direction.x = rand_range(-5,5)
	direction.y = rand_range(0,-1)
	direction = direction.normalized()
	pass

func _process(delta):
	remove_dead_enemies()
	chase_enemy(delta)
	pass

func _on_DetectionArea_area_entered(area):
	if area.is_in_group(\"Enemy\"):
		enemyList.append(area)
	pass # replace with function body

func remove_dead_enemies():
	for i in range(enemyList.size()):
		if enemyList[i] == null:
			enemyList.remove(i)

func chase_enemy(delta):
	if !enemyList.empty():
		if enemyList[0]:
			direction = (enemyList[0].global_position - global_position).normalized()
	translate(direction * speed * delta)
	var angle = rad2deg(global_position.angle_to_point(direction)) + 90
	rotation = deg2rad(angle)
	pass

func _on_HoverMissile_area_entered(area):
	if area.is_in_group(\"Enemy\"):
		area.take_damage(damage)
		queue_free()
	pass # replace with function body
