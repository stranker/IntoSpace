resource_name = "ShootController.gd"
script/source = "extends Node2D

export (float) var firerate = 0.6
var enabled = true
var id_upgrade = 3
onready var upgrade = Global.get_upgrade_by_id(id_upgrade)
var level = 1

func _ready():
	initialize_turrets()
	level = upgrade[\"level\"]
	set_active_turrets(true)
	pass

func set_active(val):
	enabled = val
	set_active_turrets(val)
	pass

func initialize_turrets():
	for i in get_children():
		if i.name.find(\"Turret\") >= 0:
			i.enabled = false
	pass

func upgrade():
	upgrade[\"level\"] += 1
	pass

func _input(event):
	if event is InputEventScreenTouch:
		if event.pressed:
			firerate -= 0.025
			if firerate <= 0.3:
				firerate = 0.3
			$Timer.start()
	pass

func _process(delta):
	if enabled:
		if level != upgrade[\"level\"]:
			level = upgrade[\"level\"]
	pass

func set_active_turrets(val):
	var cont = 0
	for i in get_children():
		if i.name.find(\"Turret\") >= 0:
			if cont < level:
				i.enabled = val
				cont += 1
	pass

func get_firerate():
	return firerate


func syncronize_turrets():
	for i in get_children():
		if i.name.find(\"Turret\") >= 0:
			i.reset_timer()
	pass

func set_firerate(val):
	firerate = val
	for i in get_children():
		if i.name.find(\"Turret\")>=0:
			i.set_firerate(firerate)
			i.reset_timer()
	pass

func _on_Timer_timeout():
	firerate = 0.6
	pass # replace with function body
