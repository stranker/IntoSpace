resource_name = "ShootController.gd"
script/source = "extends Node2D

var powerLevel = 1
export (float) var firerate = 0.6
export (int) var damage = 1
var enabled = false

func _ready():
	initialize_turrets()
	if enabled:
		enable_turrets()
	pass

func add_damage():
	damage += 1

func set_active(val):
	enabled = val
	enable_turrets(val)

func initialize_turrets():
	for i in get_children():
		if i.name.find(\"Turret\")>0:
			i.enabled = false
	pass

func _input(event):
	if event is InputEventScreenTouch:
		if event.pressed:
			firerate -= 0.05
			syncronize_turrets()
			if firerate <= 0.2:
				firerate = 0.2
			$Timer.start()
	pass

func enable_turrets(val):
	match powerLevel:
		1:
			$Turret.enabled = val
		2:
			$Turret.enabled = val
			$Turret2.enabled = val
			$Turret3.enabled = val
		3:
			$Turret.enabled = val
			$Turret2.enabled = val
			$Turret3.enabled = val
			$Turret4.enabled = val
			$Turret5.enabled = val
	pass

func get_damage():
	return damage

func get_firerate():
	return firerate

func add_turrets():
	powerLevel += 1
	if powerLevel > 3:
		powerLevel = 3
	enable_turrets(true)
	syncronize_turrets()
	pass

func syncronize_turrets():
	for i in get_children():
		if i.name.find(\"Turret\")>0:
			i.reset_timer()
	pass

func set_firerate(val):
	firerate = val
	for i in get_children():
		i.set_firerate(firerate)

func _on_Timer_timeout():
	firerate = 0.6
	pass # replace with function body
