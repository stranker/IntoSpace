resource_name = "Asteroide.gd"
script/source = "extends Area2D

var direction = Vector2(0,1)
var speed = 25
var life = 3
var alive = true
var initialRotation
var points = 100

func _ready():
	randomize()
	add_to_group(\"Enemy\")
	calculate_direction()
	initialRotation = rand_range(-1,1)
	pass

func _process(delta):
	if alive:
		translate(direction * delta * speed)
		$Sprite.rotation += initialRotation * delta
	pass

func take_damage(damage):
	if alive:
		life -= damage
		$AnimSprite.play(\"Flick\")
		if life <= 0:
			alive = false
			$AnimSprite.play(\"Dead\")
			Global.camera.minimal_shake()
			Global.points += points
	pass

func is_alive():
	return alive

func calculate_direction():
	direction.x = rand_range(-5,5)
	pass

func _on_AliveTimer_timeout():
	queue_free()
	pass # replace with function body
