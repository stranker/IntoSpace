resource_name = "Asteroide.gd"
script/source = "extends Area2D

var direction = Vector2(0,1)
var speed = 400
var life = 2
var alive = true

func _ready():
	add_to_group(\"Enemy\")
	pass

func _process(delta):
	if alive:
		translate(direction * delta * speed)
	pass

func take_damage():
	if alive:
		life -= 1
		$AnimSprite.play(\"Flick\")
		if life <= 0:
			alive = false
			$AnimSprite.play(\"Dead\")
	pass

func is_alive():
	return alive"
