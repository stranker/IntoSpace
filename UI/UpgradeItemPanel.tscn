func set_upgrade_info(uItem):
	upgradeItem = uItem
	$Imagen.texture = load(upgradeItem[\"texture\"])
	$ProgressBar.max_value = upgradeItem[\"max_level\"]
	update_price()
	pass

func _on_TextureButton_button_down():
